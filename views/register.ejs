<script>
    var typingTimer;                //timer identifier
    var doneTypingInterval = 700;  //time in ms, 5 second for example
    var $input = $('#team');

    //on keyup, start the countdown
    $input.on('keyup', function () {
        clearTimeout(typingTimer);
        typingTimer = setTimeout(doneTyping, doneTypingInterval);
    });

    //on keydown, clear the countdown
    $input.on('keydown', function () {
        clearTimeout(typingTimer);
    });

    //user is "finished typing," do something
    function doneTyping () {
        var url = "/freeDomains";
        $.ajax({
            type: 'GET',
            url: url,
            data: {
                team: $input.val()
            }
        }).done(function (response) {
            console.log(JSON.stringify(response));
            if (response.domains > 0) {
                $('#btn-register').css("display", "none")
                $('#team_alert').css("display", "")
                $('#team_alert').text($('#team').val() + " is already taken")

			} else {
                $('#btn-register').css("display", "")
                $('#team_alert').css("display", "none")
			}
        });
    }
</script>
